@model UserModel
<form id="main" class="main" method="post" asp-action="Save" asp-controller="User">
    <div class="container">
        <h1 class="text-center"> Add User </h1>

        @if (Model.UserID != null)
        {
            <input type="hidden" asp-for="UserID" />
        }
        <div class="form-group">
            <label><span class="text-danger">*</span>User Name:-</label>
            <input type="text" asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label><span class="text-danger">*</span> Email:-</label>
            <input type="email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label><span class="text-danger">*</span> Password:-</label>
            <input type="text" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label><span class="text-danger">*</span> MobileNo:-</label>
            <input type="number" asp-for="MobileNo" class="form-control" />
            <span asp-validation-for="MobileNo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label><span class="text-danger">*</span>Address:-</label>
            <input type="text" asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="col-md-12">
            <label><span class="form-label">*</span>IsActive:-</label>
            <select class="form-control">
                <option selected>Yes</option>
                <option>No</option>
            </select>
        </div>
        <span asp-validation-for="IsActive" class="text-danger"></span>

        <div class="col">
            <button class="btn btn-success mt-5 ml-5 btn-lg">Submit</button>
            <a class="btn btn-danger mt-5 ml-5 btn-lg " asp-controller="User" asp-action="UserList">Back</a>
        </div>
    </div>
  

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
